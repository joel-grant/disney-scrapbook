<div class="min-h-screen bg-gray-900 text-white">
  <div class="container mx-auto px-6 py-12">
    
    <% if @user %>
      <div class="bg-white/10 rounded-lg p-6 max-w-md mx-auto">
    <h1 class="text-4xl font-bold text-center mb-8"><%= @user.first_name %>'s Dashboard</h1>
        <h2 class="text-2xl font-semibold mb-4">Welcome, <%= @user.first_name %>!</h2>
        <div class="space-y-2">
          <p><strong>Name:</strong> <%= @user.first_name %> <%= @user.last_name %></p>
          <p><strong>Email:</strong> <%= @user.email %></p>
        </div>
      </div>
    <% else %>
      <div class="text-center">
        <p class="text-red-400">Please log in to view your dashboard.</p>
      </div>
    <% end %>
  </div>
</div>